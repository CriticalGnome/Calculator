<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.revotechs.calculator.activities.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <TextView
        android:id="@+id/result_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:fontFamily="monospace"
        android:text="@string/result_text"
        android:textAlignment="textEnd"
        android:textAllCaps="true"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/current_vew"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:fontFamily="monospace"
        android:text="@string/expression_text"
        android:textAlignment="textEnd"
        android:textAllCaps="true"
        android:textAppearance="@android:style/TextAppearance.Material.Title"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_view" />

    <android.support.v7.widget.ButtonBarLayout
        android:id="@+id/bar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/current_vew"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        >

        <Button
            android:id="@+id/button_1"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/_1"/>

        <Button
            android:id="@+id/button_2"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/_2" />

        <Button
            android:id="@+id/button_3"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/_3" />

        <Button
            android:id="@+id/button_add"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/add" />

        <Button
            android:id="@+id/button_left_brace"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/left_brace" />

        <Button
            android:id="@+id/button_sin"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/sin" />

        <Button
            android:id="@+id/button_ln"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/ln" />

    </android.support.v7.widget.ButtonBarLayout>

    <android.support.v7.widget.ButtonBarLayout
        android:id="@+id/bar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bar1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <Button
            android:id="@+id/button_4"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/_4" />

        <Button
            android:id="@+id/button_5"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/_5" />

        <Button
            android:id="@+id/button_6"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/_6" />

        <Button
            android:id="@+id/button_sub"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/sub" />

        <Button
            android:id="@+id/button_right_brace"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/right_brace" />

        <Button
            android:id="@+id/button_cos"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/cos" />

        <Button
            android:id="@+id/button_lg"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/lg" />

    </android.support.v7.widget.ButtonBarLayout>

    <android.support.v7.widget.ButtonBarLayout
        android:id="@+id/bar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bar2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <Button
            android:id="@+id/button_7"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/_7" />

        <Button
            android:id="@+id/button_8"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/_8" />

        <Button
            android:id="@+id/button_9"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/_9" />

        <Button
            android:id="@+id/button_mul"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/mul" />

        <Button
            android:id="@+id/button_sqrt"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/sqrt"/>

        <Button
            android:id="@+id/button_tan"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/tan" />

        <Button
            android:id="@+id/button_pi"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/pi" />

    </android.support.v7.widget.ButtonBarLayout>

    <android.support.v7.widget.ButtonBarLayout
        android:id="@+id/bar4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bar3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <Button
            android:id="@+id/button_reset"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/reset" />

        <Button
            android:id="@+id/button_0"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/_0" />

        <Button
            android:id="@+id/button_comma"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/comma" />

        <Button
            android:id="@+id/button_div"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/div" />

        <Button
            android:id="@+id/button_exponentiation"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/exponentiation"/>

        <Button
            android:id="@+id/button_ctg"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/ctg" />

        <Button
            android:id="@+id/button_e"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/e" />

    </android.support.v7.widget.ButtonBarLayout>

    <android.support.v7.widget.ButtonBarLayout
        android:id="@+id/bar5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/bar4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp">

        <Button
            android:id="@+id/button_equal"
            android:layout_width="360dp"
            android:layout_height="36dp"
            android:layout_weight="6"
            android:text="@string/equal" />

        <Button
            android:id="@+id/button_back"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/back" />
    </android.support.v7.widget.ButtonBarLayout>

</android.support.constraint.ConstraintLayout>
