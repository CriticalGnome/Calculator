<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.revotechs.calculator.activity.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <TextView
        android:id="@+id/result_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:fontFamily="monospace"
        android:text="@string/result_text"
        android:textAlignment="textEnd"
        android:textAllCaps="true"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/current_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:fontFamily="monospace"
        android:text="@string/expression_text"
        android:textAlignment="textEnd"
        android:textAllCaps="true"
        android:textAppearance="@android:style/TextAppearance.Material.Title"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_view" />

    <LinearLayout
        android:id="@+id/bar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/current_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        >

        <Button
            android:id="@+id/button_1"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/_1"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/_2"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button_3"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/_3"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button_add"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/add"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button_left_brace"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/left_brace"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button_sin"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/sin"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button_ln"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/ln"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bar1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <Button
            android:id="@+id/button_4"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/_4"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button_5"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/_5"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button_6"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/_6"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button_sub"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/sub"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button_right_brace"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/right_brace"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button_cos"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/cos"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button_lg"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/lg"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bar2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <Button
            android:id="@+id/button_7"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/_7"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button_8"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/_8"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button_9"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/_9"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button_mul"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/mul"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button_sqrt"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/sqrt"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button_tan"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/tan"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button_pi"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/pi"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bar4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bar3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <Button
            android:id="@+id/button_reset"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/reset"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button_0"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/_0"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button_comma"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/comma"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button_div"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/div"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button_exponentiation"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/exponentiation"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button_ctg"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/ctg"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button_e"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/e"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bar5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/bar4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp">

        <Button
            android:id="@+id/button_equal"
            android:layout_width="360dp"
            android:layout_height="36dp"
            android:layout_weight="6"
            android:text="@string/equal"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button_back"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/back"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
